<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="da.delightedanimation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.step1.list.Step1ListActivity"
            android:label="@string/title_activity_step1"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".feature.step1.detail.Step1DetailActivity"
            android:label="@string/title_activity_step1"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>